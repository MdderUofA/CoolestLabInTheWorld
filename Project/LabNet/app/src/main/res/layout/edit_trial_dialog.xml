<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-black"
        android:text="Add Trial"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/addTrialTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:hint="Title"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/addTrialResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:ems="10"
        android:hint="Data"
        android:inputType="textPersonName" />


    <Button
        android:id="@+id/addTrial"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/getLocationButton"
        android:layout_alignStart="@+id/getLocationButton"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="7dp"
        android:text="Add"
        app:backgroundTint="#009688" />

    <ImageButton
        android:id="@+id/saveTrialQR"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/getLocationButton"
        android:layout_alignEnd="@+id/getLocationButton"
        android:layout_alignTop="@+id/addTrial"
        android:layout_alignBottom="@+id/addTrial"
        android:layout_toEndOf="@+id/addTrial"
        android:layout_toRightOf="@id/addTrial"
        android:layout_marginStart="15dp"
        android:src="@drawable/ic_qr_white"
        app:backgroundTint="#009688" />

    <Button
        android:id="@+id/getLocationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="190dp"
        android:text="Get Location"
        app:backgroundTint="#009688" />

</RelativeLayout>